<UserControl x:Class="LiveStreamAutomation.LowerThirdsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiveStreamAutomation"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Name="grdLowerThird">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Source="/LiveStreamAutomation;Component/image/frisbeeguru.png" Grid.Column="0" VerticalAlignment="Bottom" Margin="5,0,0,5"></Image>
        <StackPanel Grid.Column="1" Name="stckNames" Background="White" Margin="0,5,5,5" MaxHeight="145" VerticalAlignment="Bottom">

        </StackPanel>
    </Grid>

</UserControl>
